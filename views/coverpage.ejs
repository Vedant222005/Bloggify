<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Vedant's Blog - Cover Page</title>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />

  <!-- Vanilla Tilt -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.7.3/vanilla-tilt.min.js"></script>

  <style>
    body { font-family: 'Poppins', sans-serif; }

    /* Animations */
    .animate-fade-in {
      animation: fadeInUp 1s ease-out;
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(40px); }
      to   { opacity: 1; transform: translateY(0); }
    }

    .scroll-down {
      animation: bounce 2s infinite;
    }

    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50%      { transform: translateY(-10px); }
    }
  </style>
</head>
<body class="bg-gray-100 text-gray-800">

  <!-- Navbar -->
  <%- include('./partials/nav', { user: user }) %>

  <!-- Hero Section -->
  <section class="relative bg-cover bg-center h-screen flex items-center justify-center text-white" style="background-image: url('/images/coverpage.jpg');">
    <div class="bg-white bg-opacity-10 backdrop-blur-lg p-10 rounded-2xl text-center shadow-2xl max-w-3xl animate-fade-in" data-tilt data-tilt-max="6" data-tilt-speed="500">
      <h1 class="text-6xl font-extrabold mb-6 text-white drop-shadow-lg">Welcome to <span class="text-indigo-300">Bloggify</span></h1>
      <p class="text-xl font-light mb-6">Unleash your voice. Share your world. Inspire others.</p>
      <a href="/" class="mt-4 inline-block bg-indigo-500 text-white font-bold px-6 py-3 rounded-xl hover:shadow-[0_0_15px_rgba(99,102,241,0.7)] transition duration-300 transform hover:scale-105">Explore Blogs</a>
      <div class="mt-8">
        <svg class="w-6 h-6 mx-auto text-white scroll-down" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
        </svg>
      </div>
    </div>
  </section>

  <!-- Quotes Section -->
  <section id="quotes" class="bg-white py-16 px-6 md:px-20">
    <h2 class="text-4xl font-bold text-center mb-12 text-gray-800">Words that Ignite Minds</h2>
    <div class="grid md:grid-cols-3 gap-10">
      <% const quotes = [
        { text: "There is no greater agony than bearing an untold story inside you.", author: "Maya Angelou" },
        { text: "Start writing, no matter what. The water does not flow until the faucet is turned on.", author: "Louis L’Amour" },
        { text: "The scariest moment is always just before you start.", author: "Stephen King" },
      ]; %>

      <% quotes.forEach(q => { %>
        <div class="bg-gradient-to-tr from-white to-indigo-50 p-6 rounded-xl shadow-lg transition transform hover:-translate-y-2 hover:shadow-2xl duration-300" data-tilt>
          <p class="italic text-xl mb-4">“<%= q.text %>”</p>
          <p class="text-right font-semibold text-indigo-700">– <%= q.author %></p>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- About Me Section -->
  <section class="py-16 px-6 md:px-20 bg-gradient-to-br from-indigo-50 to-white">
    <div class="max-w-5xl mx-auto bg-white rounded-3xl shadow-2xl p-10 md:p-16 flex flex-col md:flex-row gap-10 items-center" data-tilt data-tilt-scale="1.05">
      <img src="/images/user.jpg" alt="Vedant Nehulkar" class="w-40 h-40 rounded-full shadow-xl border-4 border-indigo-300">
      <div>
        <h2 class="text-3xl font-bold mb-4 text-indigo-700">About Me</h2>
        <p class="text-lg mb-2"><strong>👤 Vedant Nehulkar</strong></p>
        <p class="text-gray-600 mb-2">📞 +91-9876543210</p>
        <p class="text-gray-600 mb-2">📧 vedant@example.com</p>
        <p class="mt-4 text-gray-700">I’m a passionate full-stack developer, storyteller, and lifelong learner. This platform exists to connect thinkers and creators ready to ignite minds.</p>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <%- include('./partials/footer') %>

  <!-- Initialize Tilt -->
  <script>
    VanillaTilt.init(document.querySelectorAll("[data-tilt]"), {
      max: 15,
      speed: 400,
      glare: true,
      "max-glare": 0.2,
    });
  </script>

</body>
</html>
